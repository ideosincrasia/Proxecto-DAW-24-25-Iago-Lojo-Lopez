<header class="site-header">
  <!-- Escritorio: logo y nav -->

  <a href="/" class="logo">
    <img src="/img/logo.png" alt="CreattyBook" />
  </a>
  
  <nav class="main-nav">
    <a href="/" class="tab <%= path==='/' ? 'active' : '' %>">Inicio</a>
    <% if (session && session.usuarioId) { %>
    <a href="/historia-menu" class="tab <%= path==='/historias'? 'active' : '' %>"
      >Historias</a
    >
    <% } %>
  </nav>
<% if (session && session.usuarioId) { %>
  <div class="header-user-actions">
    <!-- Enlace al panel -->
    <a href="/panel" class="login-link">
      <img 
        src="<%= session.avatarUrl || '/img/default-avatar.png' %>" 
        alt="Avatar" 
        class="avatar-icon"
      >
      Mi Cuenta
    </a>
    <!-- Enlace de logout -->
    <a href="/api/logout" class="logout-link" title="Cerrar sesiÃ³n">
      <i class="fa-solid fa-sign-out-alt"></i>
    </a>
  </div>
<% } else { %>
  <a
    href="javascript:void(0)"
    onclick="abrirModal('login')"
    class="login-link"
  >
    <i class="fa-regular fa-user"></i> Login
  </a>
<% } %>
</header>

<%- include('modal') %>
